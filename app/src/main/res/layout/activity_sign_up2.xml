<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    android:padding="16dp"
    tools:context=".SignUpActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sign_up2_tv_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bangers_regular"
            android:includeFontPadding="false"
            android:text="GolekGuru "
            android:textAlignment="center"
            android:textSize="24sp"
            android:transitionName="trans_app_name" />

        <TextView
            android:id="@+id/sign_up2_tv_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/bungee_regular"
            android:includeFontPadding="false"
            android:text="Halo Sobat"
            android:textColor="@color/textPrimary"
            android:textSize="32sp"
            android:transitionName="trans_caption" />

        <TextView
            android:id="@+id/sign_up2_tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_light"
            android:includeFontPadding="false"
            android:text="Buat akun dan dapatkan\npengalaman baru"
            android:textColor="@color/textPrimary"
            android:textSize="14sp"
            android:transitionName="trans_desc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jenis Kelamin"
                android:fontFamily="@font/poppins_regular"
                android:includeFontPadding="false"
                android:textSize="14sp"
                android:textColor="@color/textPrimary"
                />

            <RadioGroup
                android:id="@+id/sign_up2_radio_group_gender"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="12dp">

                <RadioButton
                    android:id="@+id/sign_up2_radio_btn_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Laki - laki"
                    android:fontFamily="@font/poppins_regular"
                    android:includeFontPadding="false"
                    android:textSize="14sp"
                    android:textColor="@color/textPrimary"
                    android:layout_marginEnd="12dp"/>

                <RadioButton
                    android:id="@+id/sign_up2_radio_btn_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perempuan"
                    android:fontFamily="@font/poppins_regular"
                    android:includeFontPadding="false"
                    android:textSize="14sp"
                    android:textColor="@color/textPrimary" />

            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/textPrimary"
                android:layout_marginVertical="16dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal Lahir"
                android:fontFamily="@font/poppins_regular"
                android:includeFontPadding="false"
                android:textSize="14sp"
                android:textColor="@color/textPrimary"
                />

            <DatePicker
                android:id="@+id/sign_up2_birth_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:datePickerMode="spinner"
                android:calendarViewShown="false"
                android:spinnersShown="true"
                />

        </LinearLayout>

        <Button
            android:id="@+id/sign_up2_btn_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/textPrimary"
            android:fontFamily="@font/poppins_medium"
            android:includeFontPadding="false"
            android:onClick="signUp"
            android:text="Buat Akun"
            android:textColor="@color/yellow"
            android:transitionName="trans_btn_submit" />

        <Button
            android:id="@+id/sign_up2_btn_login"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:fontFamily="@font/poppins_medium"
            android:includeFontPadding="false"
            android:text="Pengguna baru? Buat akun"
            android:onClick="callLoginActivity"
            android:textColor="@color/textPrimary"
            android:transitionName="trans_btn_submit2" />

    </LinearLayout>

</ScrollView>